{
  //path iteligence
  "typescript.suggest.paths": true,
  "javascript.suggest.paths": true,
  // editor
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use prettier as default formatter
  "editor.formatOnPaste": true, // format code on paste
  "editor.formatOnType": true, // format code as you type
  "files.trimTrailingWhitespace": true, // remove trailing white spaces from all lines
  "files.trimFinalNewlines": true, // Ensures there's only one blank line at the end of the file
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.formatOnSave": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
    //"editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,
  //terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontWeight": "normal",

  "workbench.colorTheme": "Default Dark+",

  "workbench.startupEditor": "newUntitledFile",
  // terminal customization
  "workbench.colorCustomizations": {
    "terminal.background": "#1D2021",
    "terminal.foreground": "#A89984",
    "terminalCursor.background": "#A89984",
    "terminalCursor.foreground": "#A89984",
    "terminal.ansiBlack": "#1D2021",
    "terminal.ansiBlue": "#0D6678",
    "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#0D6678",
    "terminal.ansiBrightCyan": "#8BA59B",
    "terminal.ansiBrightGreen": "#95C085",
    "terminal.ansiBrightMagenta": "#8F4673",
    "terminal.ansiBrightRed": "#FB543F",
    "terminal.ansiBrightWhite": "#FDF4C1",
    "terminal.ansiBrightYellow": "#FAC03B",
    "terminal.ansiCyan": "#8BA59B",
    "terminal.ansiGreen": "#95C085",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#FB543F",
    "terminal.ansiWhite": "#A89984",
    "terminal.ansiYellow": "#FAC03B",
    "activityBar.activeBackground": "#66026f",
    "activityBar.activeBorder": "#7d7302",
    "activityBar.background": "#66026f",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "sash.hoverBorder": "#66026f",
    "statusBar.background": "#38013d",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#66026f",
    "statusBarItem.remoteBackground": "#38013d",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#38013d",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#38013d99",
    "titleBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#7d7302",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "editorGroup.border": "#66026f",
    "panel.border": "#66026f",
    "sideBar.border": "#66026f",
    "statusBar.border": "#38013d",
    "statusBar.debuggingBackground": "#063d01",
    "statusBar.debuggingBorder": "#063d01",
    "statusBar.debuggingForeground": "#e7e7e7",
    "tab.activeBorder": "#66026f",
    "titleBar.border": "#38013d"
  },

  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)"
  ],
  ///Tag HightLighted
  "highlight-matching-tag.styles": {
    "opening": {
      "left": {
        "underline": "red"
      },
      "right": {
        "surround": "#155FFA"
      },
      "name": {
        "highlight": "#E86C63"
      }
    },
    "closing": {
      "full": {
        "custom": {
          "dark": {
            "borderWidth": "0 0 1px 0",
            "borderColor": "white",
            "borderStyle": "solid",
            "borderRadius": "4px",
            "right": "10px"
          },
          "light": {
            "borderWidth": "0 0 1px 0",
            "borderColor": "brown",
            "borderStyle": "solid",
            "borderRadius": "4px",
            "right": "10px"
          }
        }
      }
    }
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "javascript.updateImportsOnFileMove.enabled": "always",
  //Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "yaml.schemas": {
    "file:///c%3A/Users/ASUS/.vscode/extensions/atlassian.atlascode-2.8.5/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },

  "vsicons.dontShowNewVersionMessage": true,
  "cSpell.words": ["Chattogram", "Dropzone", "Proptypes", "Swal", "sweetalert"],
  "peacock.color": "#38013D"
}
